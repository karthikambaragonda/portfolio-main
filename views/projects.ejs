<%- include("partials/header.ejs") -%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>KARTHIK | Projects</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet"/>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f8f9fa;
    }
    .project-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: none;
      border-radius: 20px;
      background: #fff;
    }
    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    }
    .card-title {
      font-weight: 600;
    }
    .tech-used {
      font-size: 0.875rem;
      color: #6c757d;
      font-style: italic;
    }
    .btn-custom {
      border-radius: 25px;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="text-center mb-5">
      <h1 class="fw-bold display-4 text">My Projects</h1>
      <p class="text-muted fs-5">Explore a variety of apps I've built using different tech stacks.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        <% const projects = [
        {
          title: "Blog Application",
          link: "/blog",
          desc: "A blog platform to post, view, and manage posts with user authentication.",
          tech: "Node.js, Express.js, MongoDB, EJS"
        },
        {
          title: "ChatBot",
          link: "https://chat-bot-alpha-seven-11.vercel.app/",
          newTab: true,
          desc: "A conversational AI chatbot powered by Gemini API.",
          tech: "React.js, CSS, Gemini API"
        },
        {
          title: "Text Similarity Checker",
          link: "https://text-comparision-fawn.vercel.app/",
          newTab: true,
          desc: "Provided a platform to compare the similarity between two texts and generate accurate similarity scores.",
          tech: "React.js, TailwindCSS, NLP, Python"
        },
        {
            title: "Android ChatApp",
            link: "https://github.com/karthikambaragonda/Andriod-Chat-Application",
            desc: "A chat application built in Android with Java, featuring multi-screen navigation, OTP verification, real-time messaging, and AI integration for smart chat responses.",
            tech: "Java, Android Studio, XML, AI Integration"
          },
          
        {
          title: "Weather App",
          link: "/weather",
          desc: "Displays live weather data based on user input.",
          tech: "Node.js, Express.js, OpenWeather API, EJS"
        },
        {
          title: "QR Code Generator",
          link: "/qr",
          desc: "Generates QR codes instantly from user input.",
          tech: "Node.js, Express.js, EJS, QR Code API"
        },
        {
          title: "Time Table",
          link: "/tt",
          newTab: true,
          desc: "Displays a weekly academic schedule with subjects and timings.",
          tech: "HTML, CSS, JavaScript"
        },
        {
          title: "Dice Game",
          link: "/dice",
          desc: "A fun two-player dice game using random logic.",
          tech: "HTML, CSS, JavaScript"
        },
        {
          title: "String Case Converter",
          link: "/string",
          desc: "Converts strings to uppercase, lowercase, and title case formats.",
          tech: "HTML, CSS, JavaScript"
        },
        {
          title: "Character Counter",
          link: "/char",
          desc: "Counts total characters, words, and spaces in a given text.",
          tech: "HTML, CSS, JavaScript"
        }
      ]; %>
      

      <% projects.forEach(p => { %>
      <div class="col">
        <div class="card project-card h-100 shadow-sm p-4">
          <h5 class="card-title"><%= p.title %></h5>
          <p class="text-muted mb-2"><%= p.desc %></p>
          <p class="tech-used">Tech Used: <%= p.tech %></p>
          <a href="<%= p.link %>" 
             class="btn btn-outline-info btn-sm mt-3 btn-custom"
             <%= p.newTab ? 'target="_blank"' : '' %>>
             Visit
          </a>
        </div>
      </div>
      <% }); %>

    </div>
  </div>
</body>
</html>
<%- include("partials/footer.ejs") -%>
